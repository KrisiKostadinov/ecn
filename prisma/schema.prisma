generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// starts user model

model User {
  id             String @id @default(uuid())
  email          String @unique @db.VarChar(75)
  passwordHash   String @map("password_hash") @db.VarChar(255)
  roleAs         Role   @default(USER) @map("role_as")
  gender         Gender @default(NOT_AVAILABLE)
  emailConfirmed Int    @default(0) @map("email_confirmed")
}

enum Role {
  USER
  ADMIN
}

enum Gender {
  MALE
  FEMALE
  NOT_AVAILABLE
}

// ends user model